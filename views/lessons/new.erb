<h2>Create new class</h2>

<form class="new_item" method="post" action="/lessons">

  <div>
    <label for="name">Name:</label>
    <input
    required
    type="text"
    name="name"
    id="name"
    />
  </div>

  <div>
    <label for="capacity">Capacity:</label>
    <input
    required
    type="text"
    name="capacity"
    id="capacity"
    />
  </div>

  <div>
    <label for="lesson_date">Class Date:</label>
    <input
    required
    type="text"
    name="lesson_date"
    id="lesson_date"
    />
  </div>


  <div>
    <label for="start_hour">Start Time:</label>
    <select name="start_hour" id="start_hour">
      <% (0..23).each do |hour| %>
      <option value="<%= hour %>"><%= hour %></option>
      <% end %>
    </select>:
    <select name="start_min" id="start_min">
      <option value="0">00</option>
      <option value="15">15</option>
      <option value="30">30</option>
      <option value="45">45</option>
    </select>
  </div>

  <div>
    <label for="duration">Duration:</label>
    <input
    required
    type="text"
    name="duration"
    id="duration"
    />
  </div>

  <input type='submit' value="Save">

</form>
